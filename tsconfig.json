{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "backpackflow": ["./src/index"],
      "backpackflow/*": ["./src/*"],
      "backpackflow/pocketflow": ["./src/pocketflow"],
      "backpackflow/providers": ["./src/providers/index"],
      "backpackflow/nodes": ["./src/nodes/index"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist"]
} 